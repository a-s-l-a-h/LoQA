<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LoQA.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:LoQA.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="LoQA">

    <!-- The Chat Page is now the main and only content -->
    <ShellContent
        Title="EasyChat"
        ContentTemplate="{DataTemplate views:ChatPage}"
        Route="ChatPage" />

    <!-- Define the route for the settings page so we can navigate to it -->
    <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate views:SettingsPage}"
        Route="SettingsPage" />

</Shell>