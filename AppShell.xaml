<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LoQA.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:LoQA.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="LoQA">

    <Shell.FlyoutHeader>
        <views:Sidebar />
    </Shell.FlyoutHeader>

    <FlyoutItem Title="EasyChat" FlyoutIcon="dotnet_bot.png">
        <ShellContent
            Title="EasyChat"
            ContentTemplate="{DataTemplate views:ChatContentPage}"
            Route="ChatContentPage" />
    </FlyoutItem>

</Shell>