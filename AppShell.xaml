<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LoQA.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:LoQA.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="LoQA">

    <!-- This correctly sets your custom sidebar as the entire menu -->
    <Shell.FlyoutContent>
        <views:Sidebar />
    </Shell.FlyoutContent>

    <!--
    This defines the main screen of your application.
    AND THE FIX IS HERE: We have added Shell.FlyoutItemIsVisible="False".

    This explicitly tells the Shell:
    "DO NOT SHOW THIS ITEM IN THE SIDEBAR MENU."
    -->
    <ShellContent
        Title="EasyChat"
        ContentTemplate="{DataTemplate views:ChatContentPage}"
        Route="ChatContentPage"
        Shell.FlyoutItemIsVisible="False" />

</Shell>