<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:LoQA.Views"
             x:Class="LoQA.Views.HomePage"
             Title="LoQA"
             BackgroundColor="{StaticResource PageBackgroundColor}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="320" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <views:SidebarView Grid.Column="0" x:Name="SidebarViewContent" />

        <views:ChatContentView Grid.Column="1" x:Name="ChatContentViewContent" />

    </Grid>
</ContentPage>