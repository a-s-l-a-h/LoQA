<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoQA.Views.SettingsPage"
             Title="Settings"
             BackgroundColor="{StaticResource PageBackgroundColor}">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <Label Text="Application Settings"
                   FontSize="Large"
                   FontAttributes="Bold"
                   VerticalOptions="Center" 
                   HorizontalOptions="Center" />

            <!-- ADDED: This entire section for the new setting -->
            <Border Stroke="{StaticResource PrimaryAccentColor}" StrokeThickness="1" Padding="15" Margin="0,20,0,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <Grid ColumnDefinitions="*, Auto" VerticalOptions="Center">
                    <VerticalStackLayout Spacing="2">
                        <Label Text="Chat Features"
                               FontAttributes="Bold"
                               TextColor="{StaticResource PrimaryTextColor}"/>
                        <Label Text="Show 'Copy' button on chat messages."
                               TextColor="{StaticResource SecondaryTextColor}"
                               FontSize="Small"/>
                    </VerticalStackLayout>
                    <Switch x:Name="CopyOptionSwitch"
                            Grid.Column="1"
                            Toggled="CopyOptionSwitch_Toggled"/>
                </Grid>
            </Border>
            <!-- End of added section -->


            <Label Text="This page is a placeholder for future application settings."
                   VerticalOptions="Center" 
                   HorizontalOptions="Center"
                   Margin="0,50,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>